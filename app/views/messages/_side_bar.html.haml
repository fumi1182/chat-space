.side-bar
  .side-bar__header
    .side-bar__box
      .side-bar__user-name
        = current_user.name
      .side-bar__icon
        .side-bar__icon__new   
          = link_to new_group_path do
            = icon('fa', 'edit',class: 'icon')
        .side-bar__icon__edit
          = link_to edit_user_path(current_user) do
            = icon('fa', 'cog', class: 'icon')

  .side-bar__groups-list
    - current_user.groups.each do |group|
      .side-bar__group
        = link_to group_messages_path(group) do
          .side-bar__group__name
            = group.name
          .side-bar__group__message
            = group.show_last_message
        